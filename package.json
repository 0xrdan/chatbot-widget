{
  "name": "@danmonteiro/chatbot-widget",
  "version": "1.0.0",
  "description": "Customizable React chat widget with SSE streaming, research mode, and markdown rendering",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "chatbot",
    "chat-widget",
    "react",
    "sse",
    "streaming",
    "ai",
    "rag",
    "research-mode",
    "markdown"
  ],
  "author": "Dan Monteiro",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xrdan/chatbot-widget.git"
  },
  "homepage": "https://github.com/0xrdan/chatbot-widget#readme",
  "bugs": {
    "url": "https://github.com/0xrdan/chatbot-widget/issues"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "framer-motion": "^10.16.0",
    "react-markdown": "^9.0.0",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
